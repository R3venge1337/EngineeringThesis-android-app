<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:orientation="vertical"
    tools:context=".MemoryGameActivity">

    <include
        android:id="@+id/app_toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/memory_game_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="13dp"
        android:gravity="center"
        android:text="@string/memory_game_title"
        android:textColor="@color/colorForTitles"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="4"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/app_toolbar"
        app:layout_constraintVertical_bias="0.246">

        <ImageView
            android:id="@+id/fieldOne"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldOne" />

        <ImageView
            android:id="@+id/fieldTwo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldTwo" />

        <ImageView
            android:id="@+id/fieldThree"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldThree" />

        <ImageView
            android:id="@+id/fieldFour"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldFour" />

        <ImageView
            android:id="@+id/fieldFive"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldFive" />

        <ImageView
            android:id="@+id/fieldSix"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldSix" />

        <ImageView
            android:id="@+id/fieldSeven"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldSeven" />


        <ImageView
            android:id="@+id/fieldEight"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldEight" />

        <ImageView
            android:id="@+id/fieldNine"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldNine" />

        <ImageView
            android:id="@+id/fieldTen"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldTen" />

        <ImageView
            android:id="@+id/fieldEleven"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldEleven" />

        <ImageView
            android:id="@+id/fieldTwelve"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldTwelve" />

        <ImageView
            android:id="@+id/fieldThirteen"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldThirteen" />

        <ImageView
            android:id="@+id/fieldFourteen"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldFourteen" />

        <ImageView
            android:id="@+id/fieldFifteen"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldFifteen" />

        <ImageView
            android:id="@+id/fieldSixteen"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="fieldSixteen" />
    </GridLayout>

    <TextView
        android:id="@+id/memoryGameShotsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shots_title"
        android:textColor="@color/colorActionButtonsText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.667" />

    <TextView
        android:id="@+id/memoryGameShots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorActionButtonsText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toEndOf="@+id/memoryGameShotsTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.667" />

    <TextView
        android:id="@+id/memoryGameTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_time_title"
        android:textColor="@color/colorActionButtonsText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71" />

    <Chronometer
        android:id="@+id/memoryGameTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="204dp"
        android:textColor="@color/colorActionButtonsText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toEndOf="@+id/memoryGameTimeTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71" />

    <TextView
        android:id="@+id/MemoryGameInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:text="@string/instruction_game_title"
        android:textColor="@color/colorActionButtonsText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/MemoryGameInstructionDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:text="@string/memory_game_instruction_description"
        android:textColor="@color/colorActionButtonsText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>